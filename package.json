{
  "name": "chatgpt-desktop-client",
  "version": "1.0.0",
  "main": "src/main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --linux snap"
  },
  "build": {
    "appId": "com.example.chatgptdesktopclient",
    "linux": {
      "target": "snap",
      "icon": "assets/icon.png",
      "category": "Utility"
    }
  },
  "repository": "https://github.com/xanmoy/chatgpt-desktop-client.git",
  "keywords": [
    "Electron",
    "ChatGPT",
    "chatgptdesktop",
    "Linux",
    "desktopApplication"
  ],
  "author": "Tanmoy Ganguly",
  "license": "ISC",
  "description": "A simple and efficient desktop client for ChatGPT.",
  "devDependencies": {
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "electron-context-menu": "^4.0.4"
  }
}
